@page "/consistency"
@inject NavigationManager NavigationManager
@inherits BaseJsPage

<PageTitle>ConsistencyPage</PageTitle>
<div class="flex flex-col gap-6 py-8 ">
    <MyTextBox Header="Konzistencia" Description="Kontrola konzistencie textu, prítomnosť dvojitých medzier, nadväznosť nadpisov, funkčnosť krížových odkazov..." Path="consistency" />
    <MyCheckbox Id="heading-continuity" Text="Kontorla nadväznosti nadpisov" @bind-Checked="@ConsistencyPageDataService.TitleContinutity" Description="Kontrola nadväznosti nadpisov" />
    <MyCheckbox Id="headinig-formatting" Text="Kontorla formátu nadpisov" @bind-Checked="@ConsistencyPageDataService.TitleConsistency" Description="Kontrola konzistentnosti nadpisov vzhľadom na predchádzajúve nadpisy." />
    <MyCheckbox Id="double-spaces" Text="Dvojité medzery" @bind-Checked="@ConsistencyPageDataService.DoubleSpaces" Description="Kontrola, či sa v texte nachádzajú dvojité medzery."/>
    <MyCheckbox Id="empty-lines" Text="Prázdne riadky" @bind-Checked="@ConsistencyPageDataService.EmptyLines" Description="Kontrola prítomnosti viac ako jedného prázdneho riadku za sebou."/>
    <MyCheckbox Id="croos-references" Text="Funkčnosť krížových odkazov" @bind-Checked="@ConsistencyPageDataService.CrossReferenceFunctionality" Description="Kontrola funkčnosti krížových odkazov." />
    <MyCheckbox Id="doc-formatting" Text="Formátovanie dokumentu" @bind-Checked="@ConsistencyPageDataService.DocumentAlignment" Description="Kontrola konzistentného formátovania rovnakých štýlov." />
    <MyCheckbox Id="captions-check" Text="Kontrola popisov" @bind-Checked="@ConsistencyPageDataService.CaptionValidation" Description="Kontrola prítomnosti popisov obrázkov a tabuliek." />
    <MyCheckbox Id="lists-check" Text="Kontrola zoznamov" @bind-Checked="@ConsistencyPageDataService.ListValidation" Description="Kontrola konzistentnosti typov zoznamov." />
    <MyCheckbox Id="parenthases-check" Text="Kontrola zátvoriek a úvodzoviek" @bind-Checked="@ConsistencyPageDataService.ParenthesesValidation" Description="Kontrola uzavretých zátvoriek a úvodzoviek." />
    <MyCheckbox Id="dots-comas-colonc" Text="Kontrola bodiek, čiarok, dvojbodiek" @bind-Checked="@ConsistencyPageDataService.DotsComasColonsValidation" Description="Kontrola správnosti použitie bodiek, čiarok a dvojbodiek. Predpopkladá sa medzera za znakom a žiadna medzera pred." />
    <MyButton ButtonContent="ŠTART" Icon="fa-solid fa-play" Classes="w-48" OnClick="OnStartClick" />
</div>