<div class="text-red-400 bg-pallette-secondary-black rounded-lg">
    <div class="w-[95%] py-1 px-4">
        <h3 class="text-2xl pb-border-b-2 border-red-400">@Header</h3>
        <p class="">@ErrorText</p>
    </div>
</div>
    
@code {
    /// <summary>
    /// Gets or sets the error text.
    /// </summary>
    [Parameter]
    public string ErrorText { get; set; } = string.Empty;

    /// <summary>
    /// Gets or sets the header text.
    /// </summary>
    [Parameter]
    public string Header { get; set; } = string.Empty;
}
