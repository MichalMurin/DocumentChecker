<a class="block bg-pallette-secondary-black rounded-lg" href="@Path">
    <div class="w-[95%] mx-auto text-white py-6">
        <h3 class="text-2xl pb-2 border-b-2 border-black">@Header</h3>
        <p class="mt-4 ">@Description</p>
    </div>
</a>

@code
{
    /// <summary>
    /// Gets or sets the header text.
    /// </summary>
    [Parameter]
    public string Header { get; set; } = "Nadpis";

    /// <summary>
    /// Gets or sets the description text.
    /// </summary>
    [Parameter]
    public string Description { get; set; } = "Popis";

    /// <summary>
    /// Gets or sets the path.
    /// </summary>
    [Parameter]
    public string Path { get; set; } = "#";
}